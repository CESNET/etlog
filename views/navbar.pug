//- taken from https://github.com/ALT-F1/bootstrap3-jade-node-express-grunt/blob/master/app/views/bootstrap3-templates/navbar-fixed-top.jade

-var menu = {'obecné vyhledávání': 'search', 'počet MAC adres': 'mac_count', 'neúspěšná přihlášení': 'failed_logins'};
-var roaming = { 'organizace nejvíce poskytující roaming' : 'roaming_most_provided', 'organizace nejvíce využívající roaming' : 'roaming_most_used' };

mixin active(val, key)
  li.active
    a(ui-sref=val)= key

mixin inactive(val, key)
  li
    a(ui-sref=val)= key

.navbar.navbar-default.navbar-fixed-top(role='navigation')
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
    .navbar-collapse.collapse
      ul.nav.navbar-nav
        each val, key in menu
          if (selected === key)
            +active(val, key)
          else
            +inactive(val, key)
        li#roaming
          a.dropdown-toggle(href='#', data-toggle='dropdown')
            | roaming
            span.caret
          ul.dropdown-menu(role='menu')
            each val, key in roaming
              li
                a(ui-sref=val)= key
      ul.nav.navbar-nav.navbar-right
        li.active
          a(href='./') přihlášený uživatel
      .nav-collapse

